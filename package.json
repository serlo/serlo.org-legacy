{
  "name": "@serlo/athene2-assets-workspace",
  "version": "0.0.0",
  "bugs": {
    "url": "https://github.com/serlo-org/athene2-assets/issues"
  },
  "repository": "serlo-org/athene2-assets",
  "license": "Apache-2.0",
  "author": "Serlo Education e.V.",
  "scripts": {
    "build": "lerna run --stream build",
    "predeploy": "npm-run-all increment-version build",
    "deploy": "lerna run --stream deploy",
    "format": "yarn _prettier --write",
    "lint": "npm-run-all lint:*",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "changelog": "ts-node scripts/changelog",
    "license": "ts-node scripts/license-headers",
    "test": "jest",
    "increment-version": "lerna version --message \"chore: release %v\"",
    "_prettier": "prettier \"{{packages/*/,}{.circleci,__mock__,__tests__,scripts,src}/**/*,*}.{js,jsx,ts,tsx,json,md,yaml,yml,css,scss}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@splish-me/changelog": "^0.1.0",
    "@splish-me/copyright-headers": "^0.0.2",
    "@types/glob": "^7.0.0",
    "@types/jest": "^24.0.0",
    "@types/signale": "^1.0.0",
    "glob": "^7.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.0.0",
    "rimraf": "^2.0.0",
    "signale": "^1.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
